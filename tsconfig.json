{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "types": ["node"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@logger": ["core/logger"],
      "@router": ["http/routes/index"],
      "@discord": ["bot"],
      "@discord/*": ["bot/*"],
      "@commands/*": ["bot/commands/*"],
      "@events/*": ["bot/events/*"],
      "@routes/*": ["http/routes/*"],
      "@utils/*": ["utils/*"],
      "@middlewares/*": ["http/middlewares/*"],
      "@config/*": ["config/*"],
      "@core/*": ["core/*"],
      "@services/*": ["services/*"],
      "@types/*": ["types/*"],
      "@schemas/*": ["schemas/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
