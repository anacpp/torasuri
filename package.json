{
  "name": "torasuri",
  "version": "0.1.0",
  "description": "Discord bot + Express API (TypeScript)",
  "main": "dist/server.js",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.17"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --clear --transpile-only -r tsconfig-paths/register src/server.ts",
    "clean": "rm -rf dist",
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "start": "node -r module-alias/register dist/server.js",
    "lint": "eslint 'src/**/*.{ts,tsx}' --max-warnings=0",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "format": "prettier --write .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anacpp/torasuri.git"
  },
  "keywords": [
    "discord",
    "bot",
    "express",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/anacpp/torasuri/issues"
  },
  "homepage": "https://github.com/anacpp/torasuri#readme",
  "dependencies": {
    "axios": "^1.7.7",
    "cors": "^2.8.5",
    "discord.js": "^14.15.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "module-alias": "^2.2.3",
    "mongodb": "^6.19.0",
    "pino": "^9.4.0",
    "pino-pretty": "^11.2.2",
    "stellar-sdk": "^13.3.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/helmet": "^4.0.0",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.4"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "_moduleAliases": {
    "@logger": "dist/core/logger.js",
    "@router": "dist/http/routes/index.js",
    "@discord": "dist/bot",
    "@utils": "dist/utils",
    "@commands": "dist/bot/commands",
    "@events": "dist/bot/events"
  }
}
